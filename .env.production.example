# ===========================================
# Coolify Production Environment
# ===========================================

# Application
APP_NAME="تعمیرآنلاین"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Tehran
APP_URL=https://your-domain.com

# Localization
APP_LOCALE=fa
APP_FALLBACK_LOCALE=fa
APP_FAKER_LOCALE=fa_IR

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Database (Coolify will provide these)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=tamironline
DB_USERNAME=tamironline
DB_PASSWORD=

# Session & Cache (Use Redis in production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# Redis (Coolify will provide these)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Filesystem
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=reverb

# Kavenegar SMS
SMS_KAVENEGAR_API_KEY=
SMS_KAVENEGAR_SENDER=
SMS_OTP_EXPIRE_MINUTES=2
SMS_OTP_RESEND_SECONDS=60

# Laravel Reverb (WebSocket)
REVERB_APP_ID=tamironline
REVERB_APP_KEY=tamironline-key
REVERB_APP_SECRET=tamironline-secret
REVERB_HOST=0.0.0.0
REVERB_PORT=8080
REVERB_SCHEME=https

# Vite (for frontend WebSocket connection)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST=your-domain.com
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https
